            <script>
                function checkNegativeValue()
                {
                    var value = parseFloat(document.getElementById("price").value);
                    var value1 = parseFloat(document.getElementById("quantity").value);
                    if(value<0)
                    {
                        //alert("Negative Value is not allowed");
                        <button type="button" onclick="checkNegativeValue()" disabled>Place Order</button>
                        return false;
                    }
                    if(value1<0)
                    {
                        //alert("Negative Value is not allowed");
                        <button type="button" onclick="checkNegativeValue()" disabled>Place Order</button>
                        return false;
                    }
                }
            </script>
            <button type="button" onclick="checkNegativeValue()">Place Order</button>
